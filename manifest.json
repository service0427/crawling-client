{
  "manifest_version": 3,
  "name": "분산 크롤링 에이전트",
  "version": "2.0.0",
  "description": "분산 크롤링 시스템의 Chrome 확장 에이전트",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "unlimitedStorage"
  ],
  
  "host_permissions": [
    "http://mkt.techb.kr/*",
    "ws://mkt.techb.kr:8081/*",
    "https://search.shopping.naver.com/*",
    "https://shopping.naver.com/*",
    "https://naver.com/*"
  ],
  
  "background": {
    "service_worker": "background-http.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://search.shopping.naver.com/*",
        "https://shopping.naver.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "크롤링 에이전트 설정"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "http://mkt.techb.kr/*"
    ]
  }
} 